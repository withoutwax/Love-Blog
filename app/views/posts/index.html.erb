<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<% @posts.each do |post| %>
  <div class="card">
    <p class="name"><%= post.user.name %></p>
    <p class="date"><%= post.created_at.strftime("%B, %d, %Y") %></p>
    <%= link_to post.title, post, class: "title" %><br/><br/>
    <%= link_to "Read more", post, class: "read-more" %>
  </div>
<% end %>
